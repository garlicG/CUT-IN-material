<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66888888" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/__cutin_bottombar_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/__cutin_cancelButton"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/__cutin_bottom_button"
            android:gravity="center"
            android:text="@android:string/cancel" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#66888888" />

        <TextView
            android:id="@+id/__cutin_demoButton"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/__cutin_bottom_button"
            android:gravity="center"
            android:text="PLAY" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#66888888" />

        <TextView
            android:id="@+id/__cutin_okButton"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/__cutin_bottom_button"
            android:gravity="center"
            android:text="@android:string/ok" />
    </LinearLayout>

</LinearLayout>