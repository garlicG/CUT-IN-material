<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/__cutin_screen_background"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/__cutin_bottombar_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/__cutin_cancelButton"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cutin_basic_hightlight"
            android:gravity="center"
            android:text="Cancel" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#333" />

        <TextView
            android:id="@+id/__cutin_okButton"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cutin_basic_hightlight"
            android:gravity="center"
            android:text="@android:string/ok" />
    </LinearLayout>

</LinearLayout>