<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/garlic_tornado_Image"
        android:layout_width="@dimen/garlin_tornado_width"
        android:layout_height="@dimen/garlin_tornado_width"
        android:layout_centerInParent="true"
        android:contentDescription="@string/garlin_tornado"
        android:src="@drawable/garlin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/cutin_title"
        android:padding="8dp"
        android:text="@string/garlin_tornado"
        android:textColor="#FFF"
        android:textSize="21sp" />

</RelativeLayout>